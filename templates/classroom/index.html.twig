{% extends 'base.html.twig' %}

{% block content %}
	<h1>Classes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Capacité</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for classroom in classrooms %}
				<tr>
					<td>{{ classroom.id }}</td>
					<td>{{ classroom.name }}</td>
					<td>{{ classroom.description }}</td>
					<td>{{ classroom.capacity }}</td>
					<td>
						<a href="{{ path('classroom_edit', { 'id': classroom.id }) }}">Modifier</a>
						{# <a href="{{ path('classroom_delete', { 'id': classroom.id, 'csrf_token': csrf_token('delete' ~ classroom.id) }) }}"
						                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette classe ?')">Supprimer</a> #}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('classroom_create') }}" class="btn btn-primary">Ajouter une classe</a>
{% endblock %}
